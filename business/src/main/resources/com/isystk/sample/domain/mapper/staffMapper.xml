<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isystk.sample.domain.mapper.StaffMapper">
	<select id="findAll" resultType="com.isystk.sample.domain.entity.Staff">
		select * from staff
	</select>

	<select id="findOne" resultType="com.isystk.sample.domain.entity.Staff">
		select * from staff where id= #{id}
	</select>

	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		insert into staff(email, password) values(#{email}, #{password})
	</insert>

	<update id="update">
		update staff set email=#{email}, password=#{password} where id= #{id}
	</update>

	<delete id="delete">
		delete from staff where id = #{id}
	</delete>

	<select id="findByEmail" resultType="com.isystk.sample.domain.entity.Staff">
		select * from staff where email= #{email}
	</select>

</mapper>