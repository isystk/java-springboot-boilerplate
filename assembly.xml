<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<!-- war & jar -->
		<moduleSet>
			<includes>
				<include>com.isystk.sample:web-admin</include>
				<include>com.isystk.sample:web-front</include>
			</includes>
			<binaries>
				<outputFileNameMapping>${module.build.finalName}.${module.extension}</outputFileNameMapping>
				<outputDirectory>sample-${project.version}-${jenkins.build.number}/tomcat/webapps</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<!-- deploy -->
		<moduleSet>
			<includes>
				<include>com.isystk.sample:web</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
						<directory>deploy</directory>
						<outputDirectory>sample-${project.version}-${jenkins.build.number}/deploy</outputDirectory>
						<filtered>true</filtered>
					</fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>com.isystk.sample:web-admin</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/admin</directory>
						<outputDirectory>sample-${project.version}-${jenkins.build.number}/apache/htdocs/${module.build.finalName}</outputDirectory>
						<excludes>
							<exclude>WEB-INF/**/*</exclude>
							<exclude>WEB-INF</exclude>
							<exclude>META-INF/**/*</exclude>
							<exclude>META-INF</exclude>
						</excludes>
					</fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>com.isystk.sample:web-front</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/front</directory>
						<outputDirectory>sample-${project.version}-${jenkins.build.number}/apache/htdocs</outputDirectory>
						<excludes>
							<exclude>WEB-INF/**/*</exclude>
							<exclude>WEB-INF</exclude>
							<exclude>META-INF/**/*</exclude>
							<exclude>META-INF</exclude>
							<exclude>html/**/*</exclude>
							<exclude>html</exclude>
						</excludes>
					</fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>com.isystk.sample:batch</include>
			</includes>
			<binaries>
				<outputFileNameMapping>${module.build.finalName}.${module.extension}</outputFileNameMapping>
				<outputDirectory>sample-${project.version}-${jenkins.build.number}/batch/bin</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>true</includeDependencies>
				<dependencySets>
					<dependencySet>
						<outputDirectory>sample-${project.version}-${jenkins.build.number}/batch/bin</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>scripts</directory>
						<outputDirectory>sample-${project.version}-${jenkins.build.number}/batch/scripts</outputDirectory>
					</fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>